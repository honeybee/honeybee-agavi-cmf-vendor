<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://agavi.org/agavi/config/parts/validators/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
    parent="%core.module_dir%/Honeybee_SystemAccount/config/validators.xml">
    <ae:configuration>
        <validators translation_domain="honeybee.system_account.user.errors">

            <validator class="Honeygavi\Validator\ResourceValidator" name="invalid_user">
                <argument>resource</argument>
                <error>The given user(identifier) is invalid.</error>
                <error for="non_existent">The requested resource does not exist.</error>
                <error for="unknown_variant">The given variant is not known for this resource.</error>
                <ae:parameter name="resource_type">honeybee.system_account.user</ae:parameter>
                <ae:parameter name="revision_arg">revision</ae:parameter>
            </validator>

        </validators>

    </ae:configuration>
</ae:configurations>
