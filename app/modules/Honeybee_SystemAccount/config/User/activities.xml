<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://berlinonline.de/schemas/honeybee/config/activities/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
>
    <ae:configuration>
        <activity_containers>
            <activity_container scope="honeybee.system_account.user" extends="default_resource_activities">

                <activity name="view_resource" type="workflow">
                    <url type="route">honeybee.system_account.user.resource</url>
                    <rels>
                        <rel>activity</rel>
                        <rel>view_resource</rel>
                        <rel>view_user</rel>
                    </rels>
                </activity>

                <activity name="view_history" type="workflow">
                    <url type="route">honeybee.system_account.user.history</url>
                    <rels>
                        <rel>activity</rel>
                        <rel>history</rel>
                    </rels>
                </activity>

                <activity name="create_resource">
                    <url type="route">honeybee.system_account.user.create</url>
                    <rels>
                        <rel>activity</rel>
                        <rel>create_resource</rel>
                        <rel>create_user</rel>
                    </rels>
                </activity>

                <activity name="collection">
                    <!--
                        Custom label and description will ease translation
                        of activities rendered into the Navigation
                        (otherwise the same label/description is generated for other 'collection' activities as well)
                    -->
                    <label>user_collection.label</label>
                    <description>user_collection.description</description>
                    <url type="route">honeybee.system_account.user.collection</url>
                    <url_param name="sort">modified_at:desc</url_param>
                    <rels>
                        <rel>activity</rel>
                        <rel>collection</rel>
                        <rel>user_collection</rel>
                    </rels>
                </activity>

                <activity name="hierarchy">
                    <url type="route">honeybee.system_account.user.hierarchy</url>
                    <url_param name="sort">modified_at:desc</url_param>
                    <rels>
                        <rel>activity</rel>
                        <rel>hierarchy</rel>
                        <rel>user_hierarchy</rel>
                    </rels>
                </activity>

                <activity name="hierarchy_root">
                    <url type="route">honeybee.system_account.user.hierarchy</url>
                    <url_param name="resource" />
                    <url_param name="sort">modified_at:desc</url_param>
                    <rels>
                        <rel>activity</rel>
                        <rel>hierarchy</rel>
                        <rel>hierarchy_root</rel>
                        <rel>user_hierarchy</rel>
                    </rels>
                </activity>
            </activity_container>

            <activity_container scope="honeybee.system_account.user.resource.workflow.proceed">
                <activity name="cancel">
                    <url type="route">honeybee.system_account.user.collection</url>
                    <url_param name="sort">modified_at:desc</url_param>
                    <rels>
                        <rel>activity</rel>
                        <rel>cancel</rel>
                        <rel>collection</rel>
                    </rels>
                </activity>
            </activity_container>

            <activity_container scope="honeybee.system_account.user.resource.modify">
            </activity_container>

            <activity_container scope="honeybee.system_account.user.resource.modify.primary_activities">
                <activity name="save_resource">
                    <url type="route">null</url>
                    <verb>write</verb>
                    <rels>
                        <rel>activity</rel>
                        <rel>edit_resource</rel>
                        <rel>edit_user</rel>
                    </rels>
                </activity>
                <activity name="back_to_collection">
                    <url type="route">honeybee.system_account.user.collection</url>
                    <url_param name="sort">modified_at:desc</url_param>
                    <rels>
                        <rel>activity</rel>
                        <rel>collection</rel>
                        <rel>user_collection</rel>
                    </rels>
                </activity>
            </activity_container>

            <activity_container scope="honeybee.system_account.user.create.primary_activities">
                <activity name="save_resource">
                    <url type="route">honeybee.system_account.user.collection</url>
                    <verb>write</verb>
                    <rels>
                        <rel>activity</rel>
                        <rel>create_resource</rel>
                        <rel>create_user</rel>
                    </rels>
                </activity>
                <activity name="save_resource_and_continue">
                    <description>Datensatz erstellen und neuen anlegen</description>
                    <label>Erstellen und weiter</label>
                    <url type="route">honeybee.system_account.user.create</url>
                    <verb>write</verb>
                    <rels>
                        <rel>activity</rel>
                        <rel>create_resource</rel>
                        <rel>create_user</rel>
                    </rels>
                </activity>
                <activity name="back_to_list">
                    <description>Zurück zur Liste von Nutzern</description>
                    <label>Zurück zur Liste</label>
                    <url type="route">honeybee.system_account.user.collection</url>
                    <url_param name="sort">modified_at:desc</url_param>
                    <rels>
                        <rel>activity</rel>
                        <rel>collection</rel>
                        <rel>user_collection</rel>
                    </rels>
                </activity>
            </activity_container>

        </activity_containers>
    </ae:configuration>
</ae:configurations>
