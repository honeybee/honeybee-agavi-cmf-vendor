<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
    xmlns="http://berlinonline.de/schemas/honeybee/config/migration/1.0"
    xmlns:env="http://berlinonline.de/schemas/honeybee/config/envelope/definition/1.0"
>
    <ae:configuration>
        <migration_targets>

            <migration_target name="honeybee.core::migration::process_store" active="true">
                <settings>
                    <setting name="version_list_reader">honeybee.core::version_list::process_store::reader</setting>
                    <setting name="version_list_writer">honeybee.core::version_list::process_store::writer</setting>
                    <setting name="target_connection">ProcessStateStore</setting>
                </settings>
                <migration_loader class="Honeybee\Infrastructure\Migration\FileSystemLoader">
                    <setting name="directory">%core.module_dir%/Honeybee_Core/migration/couchdb</setting>
                </migration_loader>
            </migration_target>

        </migration_targets>
    </ae:configuration>
</ae:configurations>
