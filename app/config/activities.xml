<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://berlinonline.de/schemas/honeybee/config/activities/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
    xmlns:xi="http://www.w3.org/2001/XInclude"
>
    <ae:configuration>
        <activity_containers>
            <activity_container scope="default_resource_activities">
                <activity name="create_resource">
                    <url type="route">module.create</url>
                    <rels>
                        <rel>activity</rel>
                        <rel>create_resource</rel>
                    </rels>
                    <accepting>
                        <type>application/x-www-form-urlencoded</type>
                    </accepting>
                    <sending>
                        <type>text/html</type>
                        <type>text/csv</type>
                        <type>application/zip</type>
                        <type>application/json</type>
                        <type>application/vnd.amundsen-uber+json</type>
                    </sending>
                </activity>

                <activity name="collection">
                    <description>module.activity.collection.description</description>
                    <label>module.activity.collection.title</label>
                    <url type="route">module.collection</url>
                    <rels>
                        <rel>activity</rel>
                        <rel>collection</rel>
                    </rels>
                </activity>
            </activity_container>

            <activity_container scope="converjon">
                <activity name="thumbnail">
                    <url type="uri_template"><![CDATA[%core.base_href%converjon/?file={alias}:{file}&width={width}&height={height}&crop={crop}&format={format}&interlace=plane&quality={quality}&{strip_metadata}]]></url>
                    <url_params>
                        <url_param name="alias">dev</url_param>
                        <url_param name="width">150</url_param>
                        <url_param name="height">150</url_param>
                        <url_param name="crop">aoi_auto</url_param>
                        <url_param name="format">jpg</url_param>
                        <url_param name="quality">70</url_param>
                        <url_param name="strip_metadata">strip_metadata</url_param>
                    </url_params>
                    <rels>
                        <rel>activity</rel>
                        <rel>view_thumbnail</rel>
                    </rels>
                </activity>
                <activity name="preview">
                    <url type="uri_template"><![CDATA[%core.base_href%converjon/?file={alias}:{file}&crop={crop}&format={format}&interlace=plane&quality={quality}&{strip_metadata}]]></url>
                    <url_params>
                        <url_param name="alias">dev</url_param>
                        <url_param name="crop">aoi_auto</url_param>
                        <url_param name="format">jpg</url_param>
                        <url_param name="quality">70</url_param>
                        <url_param name="strip_metadata">strip_metadata</url_param>
                    </url_params>
                    <rels>
                        <rel>activity</rel>
                        <rel>view_thumbnail</rel>
                    </rels>
                </activity>
            </activity_container>
        </activity_containers>
    </ae:configuration>

    <xi:include href="./includes/activities.xml"
        xpointer="xmlns(ae=http://agavi.org/agavi/config/global/envelope/1.0) xpointer(/ae:configurations/*)">
        <xi:fallback />
    </xi:include>
</ae:configurations>
