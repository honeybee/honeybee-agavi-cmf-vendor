<div class="sheet theme-preview__input-html-link">
    <h1>Input: HtmlLink</h1>
    <div class="layout">
        {# htmllink input #}
        <div class="layout__item u-1-of-2-lap-and-up">
            {% include "html/attribute/html-link/as_input.twig" with {
                field_name: "Website",
                html_attributes: {},
                field_id: "htmllinkinput1",
                attribute_value: {
                    'href': 'https://example.com',
                    'text': 'this is the link text',
                    'title': 'this is some title for the link',
                    'target': '_blank',
                    'download': true
                },
                grouped_field_name: "htmllinkinput1",
                grouped_base_path: "some[website]",
                css: "jsb_ jsb_Honeybee_Core/ui/HtmlLinkPopup",
                readonly: "",
                disabled: "",
                required: "",
            } %}
        </div><!--
        --><div class="layout__item u-1-of-2-lap-and-up">
            {% include "html/attribute/html-link/as_input.twig" with {
                field_name: "Empty-Website",
