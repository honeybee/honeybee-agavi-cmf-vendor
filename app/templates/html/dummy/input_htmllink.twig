        {# readonly and required htmllink input #}
        <div class="layout__item u-1-of-2-lap-and-up">
            {% include "html/attribute/html-link/as_input.twig" with {
                field_name: "Readonly-Website",
                html_attributes: {},
                field_id: "htmllinkinput3",
                attribute_value: {
                    'href': 'https://example.com',
                    'text': 'this is the link text',
                    'title': 'this is some title for the link',
                    'target': '_blank',
                    'download': true
                },
                grouped_field_name: "htmllinkinput3",
