                field_id: "htmllinkinput2",
                attribute_value: {
                },
                grouped_field_name: "htmllinkinput2",
                grouped_base_path: "some[website]",
                css: "jsb_ jsb_Honeybee_Core/ui/HtmlLinkPopup",
