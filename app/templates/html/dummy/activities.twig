    <div class="layout">
        <div class="layout__item lap-and-up-1/2 u-1-of-1-palm">
            <h5>List</h5>
            {% embed 'html/activity_map/as_list.twig' with {
                emphasized: true
            } %}
                {% block more %}
                    <ul>
                        {% for a in activities %}
                            <li>{% include "html/activity/link.twig" with a %}</li>
                        {% endfor %}
                    </ul>
                {% endblock %}
            {% endembed %}
        </div><!--
