{% set activities = [
    {
        activity: {
            label: "Default",
            description: "An activity without a specific type (should fallback to a default one).",
            rels: []
        },
        css: "activity navigational",
        link: "javascript:void(0);"
    },
    {
        activity: {
            label: "Navigational",
            description: "An activity that takes users somewhere.",
            rels: []
        },
        css: "activity navigational",
        link: "javascript:void(0);"
    },
    {
        activity: {
            label: "Mutating",
            description: "An activity that changes data, e.g. saving a document.",
            rels: []
        },
        css: "activity mutating",
        link: "javascript:void(0);"
    },
    {
        activity: {
            label: "Positive",
            description: "An activity that confirms something.",
            rels: []
        },
        css: "activity positive",
        link: "javascript:void(0);"
    },
    {
        activity: {
            label: "Warning",
            description: "An activity that should be used with caution.",
            rels: []
        },
        css: "activity warning",
        link: "javascript:void(0);"
    },
    {
        activity: {
            label: "Destructive",
            description: "An activity that potentially destroys data irreversibly.",
            rels: []
        },
        css: "activity destructive",
        link: "javascript:void(0);"
    },
] %}

<div class="sheet">
    <h1>Clickable</h1>

    <h2>Links</h2>
    <p>
        <a title="Clickable" href="javascript:void(0);">Link</a>
    </p>
    <p>
        <button>Button</button>
    </p>
    <p>
        <button class="emphasized">Button emphasized</button>
    </p>
</div>

<div class="sheet">
    <h1>Activities</h1>

    <p>
        {% for _a in activities %}
            {% set a = _a|merge({css: _a.css ~" normal"}) %}
            {% include "html/activity/link.twig" with a %}
        {% endfor %}
    </p>
    <!-- disabled activities -->
    <p>
        {% for _a in activities %}
            {% set a = _a|merge({css: _a.css ~" normal disabled"}) %}
            {% include "html/activity/link.twig" with a %}
        {% endfor %}
    </p>
</div>

<div class="sheet">
    <h1>Activities (Emphasized)</h1>

    <p>
        {% for _a in activities %}
            {% set a = _a|merge({css: _a.css ~" emphasized"}) %}
            {% include "html/activity/link.twig" with a %}
        {% endfor %}
    </p>
    <!-- disabled emphasized activities -->
    <p>
        {% for _a in activities %}
            {% set a = _a|merge({css: _a.css ~" emphasized disabled"}) %}
            {% include "html/activity/link.twig" with a %}
        {% endfor %}
    </p>
</div>

