{%- block field -%} {# this block exists for whitespace control #}
{%- set errors = errors | default([]) -%}
<div class="hb-field {{ css|default('') }}" data-hb-field-name="{{ field_name }}" {% for attr, val in html_attributes %} {{ attr }}="{{ val }}" {% endfor %}>
    <div class="hb-field__content">
        <div class="hb-field__label">
            <label for="{{ field_id }}" class="{#mandatory#}">{{ _(field_name~'.field_name', translation_domain) }}</label>
        </div><!--
        --><div class="hb-field__value">
            {#- textarea must precede editor markup -#}
            <textarea id="{{ field_id }}" name="{{ grouped_field_name }}" placeholder="{{ translations.placeholder|default('') }}"
                maxlength="{{ maxlength|default('') }}" wrap="{{ wrap|default('') }}" cols="{{ cols|default('') }}" rows="{{ rows|default('') }}"
                {{ readonly|default('') }} {{ disabled|default('') }} {{ required|default('') }} title="{{ translations.title|default('') }}"
                class="{% if counter.enabled %} jsb_ jsb_Honeybee_Core/ui/CharCounter{% endif %}"
                {% if counter.enabled %} data-jsb="{{ counter.options|json_encode }}"{% endif %}
                >{#
                    #}{{ attribute_value }}{#
                #}</textarea>
            <ul class="errors">
                {%- block field_errors  -%}
                    {%- for error in errors -%}
                        <li class="error">{{error}}</li>
                    {%- endfor -%}
                {%- endblock  -%}
            </ul>
            {% if editor is defined and editor.enabled == true %}
                {% include editor.twig|default('html/attribute/textarea/htmlrichtexteditor.twig') %}
            {% endif %}
            {% if translations.input_help is defined %}
                <div class="input_help">{{ translations.input_help|raw }}</div>
            {% endif %}
            {% if translations.input_hint is defined %}
                <div class="input_hint">{{ translations.input_hint|raw }}</div>
            {% endif %}
            {% if translations.input_focus_hint is defined %}
                <div class="input_hint focus">{{ translations.input_focus_hint|raw }}</div>
            {% endif %}
        </div><!--
        --><div class="hb-field__extra">
            {%- block textarea_field_extra -%}{%- endblock -%}
        </div>
    </div>
</div>
{%- endblock field -%}
