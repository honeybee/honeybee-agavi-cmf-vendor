<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://berlinonline.de/schemas/honeybee/config/activities/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
>
    <ae:configuration>
        <activity_containers>
            <activity_container scope="{{ vendor_prefix }}.{{ package_prefix }}.{{ resource_prefix }}" extends="default_resource_activities">

                <activity name="view_resource" type="workflow">
                    <url type="route">{{ vendor_prefix }}.{{ package_prefix }}.{{ resource_prefix }}.resource</url>
                    <rels>
                        <rel>activity</rel>
                        <rel>view_resource</rel>
                        <rel>view_{{ resource_prefix }}</rel>
                    </rels>
                </activity>

                <activity name="view_history" type="workflow">
                    <url type="route">{{ vendor_prefix }}.{{ package_prefix }}.{{ resource_prefix }}.history</url>
                    <rels>
                        <rel>activity</rel>
                        <rel>history</rel>
                    </rels>
                </activity>

                <activity name="create_resource">
                    <url type="route">{{ vendor_prefix }}.{{ package_prefix }}.{{ resource_prefix }}.create</url>
                    <rels>
                        <rel>activity</rel>
                        <rel>create_resource</rel>
                        <rel>create_{{ resource_prefix }}</rel>
                    </rels>
                </activity>

                <activity name="collection">
                    <url type="route">{{ vendor_prefix }}.{{ package_prefix }}.{{ resource_prefix }}.collection</url>
                    <url_param name="sort">modified_at:desc</url_param>
                    <rels>
                        <rel>activity</rel>
                        <rel>collection</rel>
                        <rel>{{ resource_prefix }}_collection</rel>
                    </rels>
                </activity>

                <activity name="hierarchy">
                    <url type="route">{{ vendor_prefix }}.{{ package_prefix }}.{{ resource_prefix }}.hierarchy</url>
                    <url_param name="sort">modified_at:desc</url_param>
                    <rels>
                        <rel>activity</rel>
                        <rel>hierarchy</rel>
                        <rel>{{ resource_prefix }}_hierarchy</rel>
                    </rels>
                </activity>

                <activity name="hierarchy_root">
                    <url type="route">{{ vendor_prefix }}.{{ package_prefix }}.{{ resource_prefix }}.hierarchy</url>
                    <url_param name="resource" />
                    <url_param name="sort">modified_at:desc</url_param>
                    <rels>
                        <rel>activity</rel>
                        <rel>hierarchy</rel>
                        <rel>hierarchy_root</rel>
                        <rel>{{ resource_prefix }}_hierarchy</rel>
                    </rels>
                </activity>

            </activity_container>

            <activity_container scope="{{ vendor_prefix }}.{{ package_prefix }}.{{ resource_prefix }}.resource.workflow.proceed">
                <activity name="cancel">
                    <url type="route">{{ vendor_prefix }}.{{ package_prefix }}.{{ resource_prefix }}.collection</url>
                    <url_param name="sort">modified_at:desc</url_param>
                    <rels>
                        <rel>activity</rel>
                        <rel>cancel</rel>
                        <rel>collection</rel>
                    </rels>
                </activity>
            </activity_container>

            <activity_container scope="{{ vendor_prefix }}.{{ package_prefix }}.{{ resource_prefix }}.subheader_activities" extends="default_subheader_activities">
                <activity name="create_resource">
                    <url type="route">{{ vendor_prefix }}.{{ package_prefix }}.{{ resource_prefix }}.create</url>
                    <rels>
                        <rel>create_{{ resource_prefix }}</rel>
                    </rels>
                </activity>

                <activity name="back_to_collection">
                    <url type="route">{{ vendor_prefix }}.{{ package_prefix }}.{{ resource_prefix }}.collection</url>
                    <url_param name="sort">modified_at:desc</url_param>
                    <rels>
                        <rel>{{ resource_prefix }}_collection</rel>
                    </rels>
                </activity>
            </activity_container>

        </activity_containers>
    </ae:configuration>
</ae:configurations>
