{
    "name": "honeybee/honeybee-agavi-cmf-vendor",
    "type": "library",
    "description": "Vendor library that is used in the honeybee-agavi-cmf-project.",
    "keywords": ["honeybee", "agavi"],
    "homepage": "https://github.com/honeybee/honeybee-agavi-cmf-vendor",
    "license": "MIT",
    "authors": [
        {
            "name": "Hasham Ahmad",
            "email": "mr.hash@gmail.com",
            "role": "Developer"
        },
        {
            "name": "Steffen Gransow",
            "email": "honeybee@mivesto.de",
            "role": "Developer"
        },
        {
            "name": "Thorsten Schmitt-Rink",
            "email": "schmittrink@gmail.com",
            "homepage": "https://github.com/shrink0r",
            "role": "Developer"
        },
        {
            "name": "Honeybee Contributors",
            "homepage": "https://github.com/honeybee/honeybee-agavi-cmf-vendor/graphs/contributors"
        }
    ],

    "support": {
        "issues": "https://github.com/honeybee/honeybee-agavi-cmf-vendor/issues",
        "irc": "irc://irc.freenode.org/honeybee"
    },

    "autoload": {
        "psr-4": {
            "Honeybee\\FrameworkBinding\\Agavi\\" : "app/lib/Agavi",
            "HoneybeeExtensions\\Composer\\": "etc/composer/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Honeybee\\Tests\\" : "testing/unit"
        }
    },

    "prefer-stable": true,

    "require": {
        "php": ">=5.6.0",
        "lib-libxml": "*",
        "honeybee/agavi": "1.1.*",
        "honeybee/honeybee": "master@dev",
        "honeybee/trellis": "master@dev",
        "shrink0r/workflux": "master@dev",
        "shrink0r/monatic": "master@dev",
        "graste/environaut": "^0.5",
        "michelf/php-markdown": "~1.5",
        "monolog/monolog": "~1.0",
        "mthaml/mthaml": "~1.7",
        "swiftmailer/swiftmailer": "5.4.*",
        "symfony/finder": "~2.7",
        "symfony/process": "~2.7",
        "symfony/validator": "~2.7",
        "willdurand/negotiation": "~1.4"
    },

    "require-dev": {
        "phpunit/phpunit": "^4.5 || ^5.0.5",
        "phpmd/phpmd": "^2.3",
        "sebastian/phpcpd": "~2.0.2",
        "squizlabs/php_codesniffer": "^2.3.3",
        "mockery/mockery": "master@dev",
        "satooshi/php-coveralls": "master@dev",
        "sami/sami": "^3.0.8"
    },

    "scripts": {
        "build": [
            "@test",
            "@code-sniffer",
            "@validate-json"
        ],
        "test": "phpunit",
        "code-sniffer": "vendor/bin/phpcs --extensions=php --standard=psr2 app/lib testing/unit",
        "code-sniffer-autofix": "vendor/bin/phpcbf --standard=psr2 -d tabWidth=4 app/lib",
        "validate-json": "composer validate --no-check-all --no-check-lock",
        "validate-deps": "composer validate --with-dependencies --strict"
    }
}
